#!/bin/sh

errorExit() {
    echo "*** $*" 1>&2
    exit 1
}

curl --silent --max-time 2 --insecure https://localhost:{{kubernetes_api_port}}/ -o /dev/null || errorExit "Error GET https://localhost:{{kubernetes_api_port}}/"
if ip addr | grep -q "{{kubernetes_vip}}"; then
    curl --silent --max-time 2 --insecure https://{{kubernetes_vip}}:{{kubernetes_vip_port}}/ -o /dev/null || errorExit "Error GET https://{{kubernetes_vip}}:{{kubernetes_vip_port}}/"
fi
exit 0
